{
  "name": "PSP-POS",
  "short_name": "PSP-POS",
  "author": "Artem Kulihin",
  "version": "1.3",
  "manifest_version": 2,
  "description": "Extension to convert USD to CAD for ProSkatersPlace POS",
  "content_scripts": [
    {
      "js": [
        "jQuery.js",
        "ui.js"
      ],
      "matches": [
        "https://proskatersplace.com/pos"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}